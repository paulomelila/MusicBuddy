<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.paulovitormelila.musicbuddy.MainActivity">


    <EditText
        android:hint="e.g. Pink Floyd"
        android:id="@+id/firstBand"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/secondBand"
        app:layout_constraintVertical_bias="0.362"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <EditText
        android:id="@+id/secondBand"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="330dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="e.g. Queen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/firstBand" />

    <EditText
        android:layout_width="150dp"
        android:hint="e.g. Led Zeppelin"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/thirdBand"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="271dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/secondBand"
        app:layout_constraintVertical_bias="1.0" />



    <Button
        android:text="Find Similar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="109dp"
        app:layout_constraintTop_toBottomOf="@+id/secondBand"
        android:id="@+id/findBand" />


</android.support.constraint.ConstraintLayout>
